@model IEnumerable<ProjectDAA1.lop>
@{
    ViewBag.Title = "GetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section">
    <div class="container">
        <br>
        <h1>@ViewData["error"]</h1>
        <br>
        <h2> Danh sách lớp</h2>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Mã lớp</th>
                    <th>Giảng viên</th>
                    <th>Tên môn</th>
                    <th>Thứ / ca</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var str = "";
                    for (int i = item.tietbd; i <= item.tietkt; i++)
                    {
                        var x = 0;
                        if (i != 10)
                        {
                            x = i;
                        }
                        str += x.ToString();
                    }
                    var ten = "";
                    if (@item.giangvien != null)
                    {
                        ten = @item.giangvien.hoten;
                    }
                    <tr>
                        <td class="checkeditem">
                            <input type="checkbox" class="checked-lop" value="@item.idlop" data-id="@item.idlop" data-malop="@item.malop"
                                   data-tengv="@ten" data-tenmon="@item.mon.tenmon"
                                   data-tkb="thứ @item.thu tiết @str" />
                        </td>
                        <td>@item.malop</td>
                        <td>@ten</td>
                        <td>@item.mon.tenmon</td>
                        <td>thứ @item.thu tiết @str</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Danh sách lớp đã chọn</h2>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Mã lớp</th>
                    <th>Giảng viên</th>
                    <th>Tên môn</th>
                    <th>Thứ / ca</th>
                </tr>
            </thead>
            <tbody id="danhsach">
                <tr id="clear">
                    <td colspan="4" class="text-center">Danh sách trống</td>
                </tr>
            </tbody>
        </table>

        <button id="submit" class="btn-primary" disabled>Đăng ký</button>
    </div>
</div>
