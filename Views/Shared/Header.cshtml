<header class="site-navbar py-4 js-sticky-header site-navbar-target" role="banner">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="site-logo">
                <a href="index.html" class="d-block">
                    <img src="~/Assets/Home/images/banner.png" alt="Image" class="img-fluid" width="300" height="80">
                </a>
            </div>
            <div class="mr-auto">
                <nav class="site-navigation position-relative text-right" role="navigation">
                    <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                        <li class="active">
                            <a href="/" class="nav-link text-left">Trang chủ</a>
                        </li>
                        <li class="has-children">
                            <a href="about.html" class="nav-link text-left">Về chúng tôi</a>
                            <ul class="dropdown">
                                <li><a href="teachers.html">Giới thiệu về giảng viên</a></li>
                                <li><a href="about.html">Giới thiệu về trường</a></li>
                            </ul>
                        </li>
                        @{
                            var session = (UserLogin)Session[ProjectDAA1.Common.CommonConstants.USER_SESSION];
                        }
                        @if (session != null)
                        {
                            if (session.Nhom == "Giảng viên")
                            {
                                <li class="has-children">
                                    <p class="nav-link text-left">Giảng viên</p>
                                    <ul class="dropdown">
                                        <li><a href="/lopcn" class="nav-link text-left"> Lớp chủ nhiệm </a></li>
                                        <li><a href="/lop" class="nav-link text-left"> Lớp </a></li>
                                        <li><a href="/giangvien/tkb" class="nav-link text-left"> Thời khoá biểu </a></li>
                                    </ul>
                                </li>
                                <li><a href="/giangvien/thongtincanhan">Thông tin cá nhân</a></li>
                                <li><a href="/Teacher/doimatkhau">Đổi mật khẩu</a></li>
                                <li><a href="/thongbaos/Index">Thông báo</a></li>
                            }
                            else
                            {
                                <li class="has-children">
                                    <p class="nav-link text-left"> Sinh viên </p>
                                    <ul class="dropdown">
                                        <li><a href="/sinhvien/kqht" class="nav-link text-left"> Kết quả học tập </a></li>
                                        <li><a href="/sinhvien/tkb" class="nav-link text-left"> Thời khoá biểu </a></li>
                                        <li><a href="/sinhvien/thongtincanhan" class="nav-link text-left"> Thông tin cá nhân </a></li>
                                        @if (ViewBag.Viewdkhp != null)
                                        {
                                            <li><a href="/dkhp" class="nav-link text-left"> Đăng ký học phần </a></li>
                                            <li><a href="/huydkhp" class="nav-link text-left"> Huỷ đăng ký học phần </a></li>
                                        }
                                    </ul>
                                </li>
                                <li><a href="/Student/doimatkhau">Đổi mật khẩu</a></li>
                            }
                        }
                        else
                        {
                            <li><a href="/" class="nav-link text-left">Chưa đăng nhập</a></li>
                        }
                    </ul>
                </nav>
            </div>


        </div>
    </div>
</header>