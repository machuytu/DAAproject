@model ProjectDAA1.thongbao

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br/>
<br/>
<br/>
<br/>


<div class="nhutcontainer">
    <h2 class="nhutmargin nhuttieude" style="text-align:center">CHI TIẾT</h2>
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <strong><i class="zmdi zmdi-account-calendar p-2"></i><a>Thông báo</a></strong>
                    <small>>>> Chi tiết</small>
                </div>
                <div class="card-body card-block">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="tieude"><b>TIÊU ĐỀ: </b></label>
                                    @Html.DisplayFor(model => model.tieude, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="noidung"><b>NỘI DUNG: </b></label>
                                    @Html.DisplayFor(model => model.noidung, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="tag"><b>TAGS</b></label>
                                    <P style="color:blue"> #@Html.DisplayFor(model => model.tag, new { htmlAttributes = new { @class = "form-control" } })</P>
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="thoigiandang"><b>Mã tài khoản thông báo:</b></label>
                                    @Html.DisplayFor(model => model.taikhoan.matk, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="thoigiancapnhat"><b>Thời gian cập nhật:</b></label>
                                    @Html.DisplayFor(model => model.thoigiancapnhat, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="tenvama"><b>File :</b></label>
                                    <p>@Html.DisplayFor(model => model.file, new { htmlAttributes = new { @class = "form-control" } })</p>

                                    @{
                                        if (Model.file != null)
                                        {
                                            @:<button class="btn btn-primary right">
                                                @Html.ActionLink("Download", "Download", new { fileName = Model.file }, new { @style = "color: white", @class = "right" })
                                            }
                                            @:</button>
                                    }


                                </div>
                            </div>

                        </div>

                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
