@model ProjectDAA1.giangvien

@{
    ViewBag.Title = "thongtincanhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="nhutcontainer nhutmargin">
    <h2 class="nhutmargin nhuttieude" style="text-align:center">THÔNG TIN GIẢNG VIÊN</h2>
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <strong><i class="zmdi zmdi-account-calendar p-2"></i><a>Thông tin giảng viên</a></strong>
                    <small>> Chi tiết giảng viên</small>
                </div>
                <div class="card-body card-block">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="row">
                                <div class="form-group">
                                    <div class="text-center">
                                        @{
                                            if (@Model.hinhanh == null)
                                            {
                                                <img src="https://st.quantrimang.com/photos/image/2017/04/08/anh-dai-dien-FB-200.jpg" class="avatar img-circle p-2" style="height:100px; width: 100px;" alt="avatar">
                                            }
                                            else
                                            { @:<img src="@Model.hinhanh" class="avatar img-circle p-2" style="height: 100px; width: 100px;" alt="avatar">
                                            }
                                        }
                    

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class=" form-control-label nhuttieude" for="hoten"><b>Họ tên:</b></label>
                                        @Html.DisplayFor(model => model.hoten, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    </div>
                                    <div class="col-md-6">
                                        <label class=" form-control-label nhuttieude" for="masv"><b>Mã giảng viên:</b></label>
                                        @Html.DisplayFor(model => model.magv, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">

                                    <label class=" form-control-label nhuttieude" for="idlopcn"><b>KHOA:</b></label>
                                    @Html.DisplayFor(model => model.khoa.tenkhoa, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label nhuttieude" for="gioitinh"><b>Giới tính:</b></label>
                                    @Html.DisplayFor(model => model.gioitinh, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label nhuttieude" for="gioitinh"><b>Email:</b></label>
                                    @Html.DisplayFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label nhuttieude" for="ngaysinh"><b>Ngày sinh :</b></label>
                                    @*@Html.DisplayFor(model => model.ngaysinh, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @String.Format("{0:dd/MM/yyyy}", Model.ngaysinh)
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label nhuttieude" for="ngaysinh"><b>Ngày vào làm:</b></label>
                                    @*@Html.DisplayFor(model => model.ngaysinh, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @String.Format("{0:dd/MM/yyyy}", Model.ngayvaolam)
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="diachi">Địa Chỉ :</label>
                                    @Html.DisplayFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="quequan">Quê quán :</label>
                                    @Html.DisplayFor(model => model.quequan, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="sdt">Số điện thoại :</label>
                                    @Html.DisplayFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="bachoc">Cấp Bậc :</label>
                                    @Html.DisplayFor(model => model.capbac, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row p-3">
                                <a class="btn btn-success" href="/giangvien/thongtincanhan/Edit/@Model.idgv">Edit</a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

