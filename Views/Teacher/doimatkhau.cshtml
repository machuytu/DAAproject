@model ProjectDAA1.taikhoan

@{
    ViewBag.Title = "doimatkhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />


<div class="nhutnewcontent">
    <form method="post" action="/Teacher/doimatkhau" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.idtk)
        @Html.HiddenFor(model => model.idgv)
        @Html.HiddenFor(model => model.idsv)
        @Html.HiddenFor(model => model.nhom)
        @Html.HiddenFor(model => model.matk)

        <div class="form-horizontal">
            <h4 class="nhutmargin nhuttieude" style="text-align:center">ĐỔI MẬT KHẨU</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idtk)

            <div class="form-group">
               Mã giảng viên
                <div class="col-md-10">
                    @Html.EditorFor(model => model.matk, new { htmlAttributes = new { @class = "form-control", @disabled = "@disabled" } })
                    @Html.ValidationMessageFor(model => model.matk, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               Mật khẩu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

    </form>
</div>