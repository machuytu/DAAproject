                                <div class="col-md-6">
                                    <label class=" form-control-label" for="makhoa">Mã học :</label>
                                    @Html.DisplayFor(model => model.idhoc, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="tenvama">Tên và mã lớp :</label>
                                    @Html.DisplayFor(model => model.lop.malop, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-6">
