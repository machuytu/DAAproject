                                    <label class=" form-control-label" for="diemck">Điểm cuối kỳ :</label>
                                    @Html.DisplayFor(model => model.diemck, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                </div>
                                <div class="col-md-6">
                                    <label class=" form-control-label" for="diemtb">Điểm trung bình :</label>
                                    @Html.DisplayFor(model => model.diemtb, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row p-3">
                                <a class="btn btn-success" href="/Admin/hocs/Edit/@Model.idhoc">Edit</a>
