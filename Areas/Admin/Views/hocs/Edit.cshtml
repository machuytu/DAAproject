@model ProjectDAA1.hoc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <strong><i class="zmdi zmdi-account-calendar p-2"></i><a href="/Admin/hocs">Học</a></strong>
                    <small>>Edit</small>
                </div>
                <div class="card-body card-block">
                    <form method="post" action="/Admin/hocs/Edit" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.idhoc)
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label class=" form-control-label">Mã lớp</label> </br>
                                            @Model.lop.malop
                                            @*@Html.DropDownList("idlop", (IEnumerable<SelectListItem>)ViewBag.idlop, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idlop, "", new { @class = "text-danger" })*@
                                        </div>
                                        <div class="col-md-4">
                                            <label class=" form-control-label">Mã sinh viên</label> </br>
                                            @Model.sinhvien.masv
                                            @*@Html.DropDownList("idsv", (IEnumerable<SelectListItem>)ViewBag.idsv, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idsv, "", new { @class = "text-danger" })*@
                                        </div>
                                        <div class="col-md-4">
                                            <label class=" form-control-label">Họ tên</label> </br>
                                            @Model.sinhvien.hoten
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    @if (Model.lop.mon.hsqt != 0)
                                    {
                                        <div class="col-md-4">
                                            <label class=" form-control-label" for="diemqt">Điểm quá trình</label>
                                            <input type="number" max="10" min="0" step="0.05" name="diemqt" value="@Model.diemqt">
                                            @Html.ValidationMessageFor(model => model.diemqt, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                    @if (Model.lop.mon.hsth != 0)
                                    {
                                        <div class="col-md-4">
                                            <label class=" form-control-label" for="diemth">Điểm thực hành</label>
                                            <input type="number" max="10" min="0" step="0.05" name="diemth" value="@Model.diemth">
                                            @Html.ValidationMessageFor(model => model.diemth, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                    @if (Model.lop.mon.hsgk != 0)
                                    {
                                        <div class="col-md-4">
                                            <label class=" form-control-label" for="diemgk">Điểm giữa kỳ</label>
                                            <input type="number" max="10" min="0" step="0.05" name="diemgk" value="@Model.diemgk">
                                            @Html.ValidationMessageFor(model => model.diemgk, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                    <div class="col-md-4">
                                        <label class=" form-control-label" for="diemck">Điểm cuối kỳ</label>
                                        <input type="number" max="10" min="0" step="0.05" name="diemck" value="@Model.diemck">
                                        @Html.ValidationMessageFor(model => model.diemck, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-4">
                                        <label class=" form-control-label">Điểm trung bình</label>
                                        @Model.diemtb
                                    </div>
                                    <div class="text-danger">@ViewBag.err</div>
                                </div>
                                <div class="row p-3">
                                    <button class="btn btn-success">Submit</button>

                                </div>
                            </div>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

