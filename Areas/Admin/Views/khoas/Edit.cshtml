@model ProjectDAA1.khoa

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <strong><i class="zmdi zmdi-account-calendar p-2"></i><a href="/Admin/khoas">Khoa</a></strong>
                    <small>> Sửa</small>
                </div>
                <div class="card-body card-block">
                    <form method="post" action="/Admin/khoas/Edit" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.idkhoa)
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label class=" form-control-label" for="makhoa">Mã khoa</label>
                                            @Html.EditorFor(model => model.makhoa, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.makhoa, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-4">
                                            <label class=" form-control-label" for="tenkhoa">Tên khoa</label>
                                            @Html.EditorFor(model => model.tenkhoa, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                            @Html.ValidationMessageFor(model => model.tenkhoa, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-4">
                                            <label class=" form-control-label" for="idgv">Mã giáo viên trưởng khoa</label>
                                            @Html.DropDownList("idgv", (IEnumerable<SelectListItem>)ViewBag.idgv, "", htmlAttributes: new { @class = "nhutchose form-control" })
                                            @Html.ValidationMessageFor(model => model.idgv, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row p-3">
                                    <button class="btn btn-success">Submit</button>
                                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                                </div>
                            </div>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

